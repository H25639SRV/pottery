generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  role      String    @default("USER")
  createdAt DateTime  @default(now())
  products  Product[] // M·ªôt user c√≥ th·ªÉ c√≥ nhi·ªÅu product
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  image       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // üîß Th√™m hai d√≤ng n√†y ƒë·ªÉ ƒë·ªãnh nghƒ©a quan h·ªá ng∆∞·ª£c l·∫°i v·ªõi User
  userId Int
