{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // <-- Quan trọng: Bỏ qua lỗi check type trong node_modules
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": ["src"]
}
